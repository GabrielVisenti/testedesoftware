#include <stdio.h>

long long combinacao(int n, int k) {
    if (n < 0 || k < 0 || n < k) return -1; // invalido
    if (k == 0 || k == n) return 1;
    if (k > n - k) k = n - k; // simetria
    long long num = 1, den = 1;
    for (int i = 1; i <= k; i++) {
        num *= (n - (k - i));
        den *= i;
    }
    return num / den;
}

int main() {
    int n, k;
    printf("Digite n e k: ");
    scanf("%d %d", &n, &k);
    long long resultado = combinacao(n, k);
    if (resultado == -1) {
        printf("Entrada invalida\n");
    } else {
        printf("C(%d,%d) = %lld\n", n, k, resultado);
    }
    return 0;
}
